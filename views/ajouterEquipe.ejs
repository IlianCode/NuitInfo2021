<%- include('header') %>
    <!-- sidebar-wrapper  -->
    <main class="page-content">
        <div class="container-fluid">
            <div class="container">



                <!-- Titre -->
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <div class="card">
                            <div class="card-body">
                                <h1 class="">Ajouter une equipe</h1>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <form action="/ajouter_equipe" method="POST" class="container" id="needs-validation"
                        name="form_ordonnance" novalidate>
                        <!-- Client -->
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="inputNom">Nom équipe</label>
                                    <input type="text" class="form-control" id="inputNom" name="inputNom"
                                        placeholder="Nom équipe" required>
                                    <div class="invalid-feedback">
                                        Veuillez fournir un nom valide.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="formDynamique">
                            <div class="entry mb-5">
                                <fieldset class="border p-2">
                                    <legend class="w-auto">Sauvteur n°<span id="compteur">1</span></legend>

                                    <div class="row">
                                        <div class="form-group  col-sm-12 col-xl-12">
                                            <label class="form-label required">Fin de
                                                préscription</label>
                                            <div class="input-group">
                                                <select class="custom-select d-block form-control" id="selectSauvteur[]"
                                                    name="selectSauvteur[]" required>
                                                    <option value="" disabled selected>Choisir un sauvteur</option>
                                                </select>
                                                <span class="input-group-btn">
                                                    <button class="btn btn-success btn-add btnevent" type="button">
                                                        <span>+</span>
                                                    </button>
                                                </span>
                                                <div class="invalid-feedback">
                                                    Veuillez fournir une date valide.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                            </fieldset>
                        </div>

                        <!-- Validation du formulaire -->
                        <hr>
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-12 text-center">
                                <button class="btn btn-secondary" style="width: 100%;" type="submit">Valider le
                                    formulaire</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <%- include('footer') %>