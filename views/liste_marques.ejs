<%- include('header') %>
    <!-- sidebar-wrapper  -->
    <main class="page-content">
        <div class="container-fluid">
            <div class="container">



                <!-- Titre -->
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <div class="card">
                            <div class="card-body">
                                <h1 class="">Liste des marques</h1>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bouton -->
                <div class="row mt-3">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-secondary" style="width: 100%;"
                            onclick="location.href = 'ajouter_marque';">Ajouter une marque</button>
                    </div>
                </div>

                <!-- Tableau -->
                <div class="row d-flex justify-content-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <!-- Tableau -->
                        <div class="row d-flex justify-content-center">
                            <div class="col-xl-12 col-md-12 mt-3">
                                <table class="table table-striped table-bordered datatable" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th scope="col">Action</th>
                                            <th scope="col">Nom marque</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td>
                                                <ul class="list-inline m-0">
                                                    <li class="list-inline-item">
                                                        <button class="btn btn-secondary btn-sm rounded-0" type="button"
                                                            data-toggle="modal" data-target="#detail_"
                                                            title="Détails"><i class="fa fa-eye"></i></button>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <button class="btn btn-success btn-sm rounded-0" type="button"
                                                            title="Modifier"
                                                            onclick="location.href = 'modifierMarque/';"><i
                                                                class="fa fa-edit"></i></button>
                                                    </li>
                                                    <li class="list-inline-item">

                                                        <button class="btn btn-danger btn-sm rounded-0" type="button"
                                                            data-toggle="modal" data-target="#supprimer_"
                                                            title="Supprimer"><i class="fa fa-trash"></i></button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </td>
                                            <td>
                                                DONALD
                                                yorick (18)
                                            </td>
                                        </tr>


                                    </tbody>
                                </table>


                                <!-- Détails -->
                                <div class="modal fade" id="detail_">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Détails marque N°
                                                </h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p><b>Marque : </b>
                                                    DONALD
                                                </p>
                                                <p><b>Nom marque: </b>
                                                    yorick
                                                </p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Fermer</button>
                                                <button type="button" class="btn btn-secondary"
                                                    onclick="location.href = 'modifierMarque/';">Fiche</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Supprimer -->
                                <div class="modal fade" id="supprimer_">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Supprimer marque n°
                                                </h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>
                                                    Êtes-vous sûr de vouloir supprimer cette marque ?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-success"
                                                    data-dismiss="modal">Non</button>
                                                <form action="suprr_marque/" method="post">
                                                    <button type="submit" class="btn btn-danger" name="supp"
                                                        value="supp">Oui</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('footer') %>