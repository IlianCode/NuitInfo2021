<%- include('header') %>
    <!-- sidebar-wrapper  -->
    <main class="page-content">
        <div class="container-fluid">
            <div class="container">
        

      
                <!-- Titre -->
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <div class="card">
                            <div class="card-body">
                                <h1 class="">Ajouter un sauvetage</h1>
                            </div>
                        </div>
                    </div>
                </div>
        
                <div class="row mt-3">
                    <form action="/sautheuhz/form_ordonnance"  method="POST" class="container" id="needs-validation" name="form_ordonnance" novalidate>
                        <!-- Client -->
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="selectSauveuteur">Sauveuteur</label>
                                    <select class="custom-select d-block form-control" id="selectSauveuteur" name="selectSauveuteur"
                                        required>
                                        <option value="" disabled selected>Choisir un sauveuteur</option>
                                        
                                    </select>
                                    <div class="invalid-feedback">
                                        Veuillez fournir un sauveuteur valide.
                                    </div>
                                </div>
                            </div>
                        </div>
        
                        <div class="row">
                            <div class="col-lg-6 col-sm-12 col-6">
                                <div class="form-group">
                                    <label class="text-inverse" for="inputNom">Nom sauvé</label>
                                    <input type="text" class="form-control" id="inputNom" name="inputNom" placeholder="Nom" required>
                                    <div class="invalid-feedback">
                                        Veuillez fournir un nom valide.
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12 col-6">
                                <div class="form-group">
                                    <label class="text-inverse" for="inputNom">Prénom sauvé</label>
                                    <input type="text" class="form-control" id="inputPrenom" name="inputPrenom" placeholder="Prenom" required>
                                    <div class="invalid-feedback">
                                        Veuillez fournir un prenom valide.
                                    </div>
                                </div>
                            </div>
                        </div>
        
                        <!-- Pathologie -->
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="selectBateau">Bateau</label>
                                    <select class="custom-select d-block form-control" id="selectBateau"
                                        name="selectBateau" required>
                                        <option value="" disabled selected>Choisir un bateau</option>
                                                
                                    </select>
                                    <div class="invalid-feedback">
                                        Veuillez fournir un bateau valide.
                                    </div>
                                </div>
                            </div>
                        </div>
        
                        <!-- Date de préscription -->
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="inputDate">Date de sauvetage</label>
                                    <input type="date" class="form-control" id="inputDate" name="inputDate"
                                        min="1997-01-01" max="2030-12-31" required>
                                    <div class="invalid-feedback">
                                        Veuillez fournir une date valide.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="inputMoyen">Moyen</label>
                                    <input type="text" class="form-control" id="inputMoyen" name="inputMoyen" placeholder="Moyen" required>
                                    <div class="invalid-feedback">
                                        Veuillez fournir un moyen valide.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-sm-12 col-6">
                                <div class="form-group">
                                    <label class="text-inverse" for="inputLong">Longitude</label>
                                    <input type="text" class="form-control" id="inputLong" name="inputLong" placeholder="Longitude" required>
                                    <div class="invalid-feedback">
                                        Veuillez fournir une longitude valide.
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12 col-6">
                                <div class="form-group">
                                    <label class="text-inverse" for="inputLatitude">Latitude</label>
                                    <input type="text" class="form-control" id="inputLatitude" name="inputLatitude" placeholder="Latitude" required>
                                    <div class="invalid-feedback">
                                        Veuillez fournir une latitude valide.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="inputArticle">Lien article</label>
                                    <input type="text" class="form-control" id="inputArticle" name="inputArticle" placeholder="Lien article" required>
                                    <div class="invalid-feedback">
                                        Veuillez fournir un lien valide.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Validation du formulaire -->
                        <hr>
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-12 text-center">
                                <button class="btn btn-primary" style="width: 100%;" type="submit">Valider le
                                    formulaire</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <!-- page-content" -->
    </div>
    <%- include('footer') %>