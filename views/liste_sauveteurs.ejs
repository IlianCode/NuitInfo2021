<%- include('header') %>
    <!-- sidebar-wrapper  -->
    <main class="page-content">
        <div class="container-fluid">
            <div class="container">
        

      
                <!-- Titre -->
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <div class="card">
                            <div class="card-body">
                                <h1 class="">Liste des sauvteurs</h1>
                            </div>
                        </div>
                    </div>
                </div>
        
                <!-- Bouton -->
                <div class="row mt-3">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-secondary" style="width: 100%;" onclick="location.href = 'ajouter_sauveteur';">Ajouter un
                            sauvteur</button>
                    </div>
                </div>
        
                <!-- Tableau -->
                <div class="row d-flex justify-content-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <!-- Tableau -->
                        <div class="row d-flex justify-content-center">
                            <div class="col-xl-12 col-md-12 mt-3">
                                <table class="table table-striped table-bordered datatable" style="width:100%" >
                                    <thead>
                                        <tr>
                                            <th scope="col">Action</th>
                                            <th scope="col">Nom</th>
                                            <th scope="col">Prénom</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% donnees.forEach(function(user){ %>
                                            <tr>
                                                <td>
                                                    <ul class="list-inline m-0">
                                                        <li class="list-inline-item">
                                                            <button class="btn btn-secondary btn-sm rounded-0" type="button"
                                                                data-toggle="modal" data-target="#detail_"
                                                                title="Détails"><i class="fa fa-eye"></i></button>
                                                        </li>
                                                        <li class="list-inline-item">
                                                            <button class="btn btn-success btn-sm rounded-0" type="button"
                                                                title="Modifier"
                                                                onclick="location.href = '/modifierSauveteur/';"><i
                                                                    class="fa fa-edit"></i></button>
                                                        </li>
                                                        <li class="list-inline-item">
        
                                                            <button class="btn btn-danger btn-sm rounded-0" type="button"
                                                                data-toggle="modal"
                                                                data-target="#supprimer_"
                                                                title="Supprimer"><i class="fa fa-trash"></i></button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </td>
                                                <td>
                                                    <%= user.Sauveteur_nom %>
                                                </td>
                                                <td>
                                                    <%= user.Sauveteur_prenom %>
                                                </td>
                                                
                                            </tr>
        
                                             <% })%>  
                                    </tbody>
                                </table>
        
                                
                                    <!-- Détails -->
                                    <div class="modal fade" id="detail_50">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Détails sauveteur n°50
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p><b>Nom : </b>
                                                        DONALD
                                                    </p>
                                                    <p><b>Prénom : </b>
                                                        yorick
                                                    </p>
                                                    <p><b>Email : </b>
                                                        test@exemple.fr
                                                    </p>
                                                    <p><b>Tél : </b>
                                                        <span id="dispTel">0666666666</span>
                                                    </p>
                                                    <p><b>Sexe : </b>
                                                        M
                                                    </p>
                                                    <p><b>Date de naissance : </b>
                                                        07/12/2002 (18 ans)
                                                    </p>
                                                    <p><b>Ville : </b>
                                                        GRENOBLE
                                                    </p>
                                                    <p><b>Code postal : </b>
                                                        38100
                                                    </p>
                                                    <p><b>Adresse : </b>
                                                        22AvenueTest
                                                    </p>
                                                    <p><b>N° sécurité social : </b>
                                                            6666666666666
                                                        
                                                    </p>
                                                    <p><b>Mutuelle: </b>
                                                        MACIF
                                                    </p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Fermer</button>
                                                    <button type="button" class="btn btn-secondary"
                                                        onclick="location.href = '/modifierSauveteur/';">Fiche</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
        
                                    <!-- Supprimer -->
                                    <div class="modal fade" id="supprimer_">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Supprimer sauveteur n°
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>
                                                        Êtes-vous sûr de vouloir supprimer ce sauveteur ?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-success"
                                                        data-dismiss="modal">Non</button>
                                                    <form action="/suppr_sauveteur/"
                                                        method="post">
                                                        <button type="submit" class="btn btn-danger" name="supp"
                                                            value="supp">Oui</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('footer') %>

