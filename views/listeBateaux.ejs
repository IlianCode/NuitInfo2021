<%- include('header') %>
    <!-- sidebar-wrapper  -->
    <main class="page-content">
        <div class="container-fluid">
            <div class="container">



                <!-- Titre -->
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <div class="card">
                            <div class="card-body">
                                <h1 class="">Liste des bateaux</h1>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bouton -->
                <div class="row mt-3">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-secondary" style="width: 100%;"
                            onclick="location.href = 'ajouter_bateau';">Ajouter un
                            bateau</button>
                    </div>
                </div>

                <!-- Tableau -->
                <div class="row d-flex justify-content-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <!-- Tableau -->
                        <div class="row d-flex justify-content-center">
                            <div class="col-xl-12 col-md-12 mt-3">
                                <table class="table table-striped table-bordered datatable" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th scope="col">Action</th>
                                            <th scope="col">Nom</th>
                                            <th scope="col">Marque</th>
                                            <th scope="col">Modele</th>
                                            <th scope="col">Type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% donnees.forEach(function(user){ %>
                                            <tr>
                                                <td>
                                                    <ul class="list-inline m-0">
                                                        <li class="list-inline-item">
                                                            <button class="btn btn-secondary btn-sm rounded-0"
                                                                type="button" data-toggle="modal"
                                                                data-target="#detail_<%= user.Bateau_id %>"
                                                                title="Détails"><i class="fa fa-eye"></i></button>
                                                        </li>
                                                        <li class="list-inline-item">
                                                            <button class="btn btn-success btn-sm rounded-0"
                                                                type="button" title="Modifier"
                                                                onclick="location.href = 'modifierBateau/<%= user.Bateau_id %>';"><i
                                                                    class="fa fa-edit"></i></button>
                                                        </li>
                                                        <li class="list-inline-item">

                                                            <button class="btn btn-danger btn-sm rounded-0"
                                                                type="button" data-toggle="modal"
                                                                data-target="#supprimer_<%= user.Bateau_id %>"
                                                                title="Supprimer"><i class="fa fa-trash"></i></button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </td>
                                                <td>
                                                    <%= user.Bateau_nom %>
                                                </td>
                                                <td>
                                                    <%= user.Marque_nom %>
                                                </td>
                                                <td>
                                                    <%= user.Modele_nom %>
                                                </td>
                                                <td>
                                                    <%= user.Bateau_type %>
                                                </td>
                                            </tr>

                                            <% })%>
                                    </tbody>
                                </table>

                                <% donnees.forEach(function(user){ %>
                                    <!-- Détails -->
                                    <div class="modal fade" id="detail_<%= user.Bateau_id %>">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Détails bateau N°<%= user.Bateau_id %>
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p><b>Nom : </b>
                                                        <%= user.Bateau_nom %>
                                                    </p>
                                                    <p><b>Marque : </b>
                                                        <%= user.Marque_nom %>
                                                    </p>
                                                    <p><b>Modele : </b>
                                                        <%= user.Modele_nom %>s
                                                    </p>
                                                    <p><b>Type : </b>
                                                        <%= user.Bateau_type %>
                                                    </p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Fermer</button>
                                                    <button type="submit" class="btn btn-secondary"
                                                        onclick="location.href = '/modifierBateau/<%= user.Bateau_id %>';">Fiche</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Supprimer -->
                                    <div class="modal fade" id="supprimer_<%= user.Bateau_id %>">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Supprimer bateau n°<%= user.Bateau_id %>
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>
                                                        Êtes-vous sûr de vouloir supprimer ce bateau ?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-success"
                                                        data-dismiss="modal">Non</button>
                                                    <form action="/suprr_bateau/<%= user.Bateau_id %>" method="post">
                                                        <button type="submit" class="btn btn-danger" name="supp"
                                                            value="supp">Oui</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% })%>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>
    <%- include('footer') %>